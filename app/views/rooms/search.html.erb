<h3>【検索結果】<%= @rooms.count %>件が見つかりました。</h3>

<table>
   <thead>
     <tr>
       <th>施設画像</th>
       <th>施設名</th>
       <th>施設紹介</th>
       <th>住所</th>
       <th>料金/日</th>
       <th></th>
     </tr>
   </thead>

   <tbody>
    <% @rooms.each do |room| %>
    <tr>
      <td>
        <% if room.hotel? %>
          <%= image_tag room.hotel.url, size: "50x40" %>
        <% else %>
          <%= image_tag "hotel_default.png", size: "50x40" %>
        <% end %>
      </td>
      <td><%= room.name %></td>
      <td><%= room.introduction %></td>
      <td><%= room.address %></td>
      <td><%= room.price %>/日</td>
      <td><%= link_to "詳細はこちら", room %></td>
     </tr>
    <% end %>
   </tbody>
</table>
