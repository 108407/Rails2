<h3>登録済み一覧ページ</h3>

<% if flash[:notice] %>
   <p class="notice"><%= flash[:notice] %></p>
<% end %>

<table>
  <thead>
    <tr>
      <th>施設画像</th>
      <th>施設名</th>
      <th>紹介文</th>
      <th>料金</th>
      <th>作成日</th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td>
          <% if room.hotel? %>
            <%= image_tag room.hotel.url, size: "50x40" %>
          <% else %>
            <%= image_tag "hotel_default.png", size: "50x40" %>
          <% end %>
        </td>
        <td><%= link_to room.name, room %></td>
        <td><%= room.introduction %></td>
        <td><%= room.price %>円</td>
        <td><%= room.updated_at.strftime("%Y/%m/%d %H:%M") %></td>
        <td>
         <%= link_to "編集", [:edit, room] %>
        </td>
        <td>
        <%= link_to "削除", room, method: :delete, data: { confirm: "本当に削除しますか？" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>